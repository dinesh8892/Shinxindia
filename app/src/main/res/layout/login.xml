<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/lbackground"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/colorPrimary"
        tools:ignore="MissingPrefix"
        android:textSize="28dp"
        android:layout_gravity="center_horizontal"
        android:text="Welcome!"
        android:layout_marginTop="60dp"
        fontPath="fonts/fonts/OpenSans-Regular.ttf"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/colorPrimary"
        tools:ignore="MissingPrefix"
        android:textSize="14dp"
        android:layout_gravity="center_horizontal"
        android:text="Hope you enjoy the stay"
        android:layout_marginTop="4dp"
        fontPath="fonts/fonts/OpenSans-Regular.ttf"
        android:layout_height="wrap_content" />
    <TableRow
        android:id="@+id/line1"
        android:layout_width="60dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:background="@color/colorPrimary"
        >

    </TableRow>


    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:textColor="@color/colorPrimary"
        tools:ignore="MissingPrefix"
        android:textSize="14dp"
        android:layout_gravity="center_horizontal"
        android:text="Log In"
        android:layout_marginTop="4dp"
        fontPath="fonts/fonts/OpenSans-Bold.ttf"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:layout_marginHorizontal="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:hint="Phone No."
        android:textColor="@color/colorPrimary"
        android:textSize="12dp"
        android:inputType="phone"
        android:textColorHint="@color/colorPrimary"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:layout_marginHorizontal="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:hint="PIN"
        android:textColor="@color/colorPrimary"
        android:textSize="12dp"
        android:inputType="phone"
        android:textColorHint="@color/colorPrimary"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/colorPrimary"
        tools:ignore="MissingPrefix"
        android:textSize="14dp"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:text="Forgot Pin ?"
        android:layout_marginTop="4dp"
        fontPath="fonts/fonts/OpenSans-Bold.ttf"
        android:layout_height="wrap_content" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/arrowforward"
        android:layout_height="50dp" />
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/colorPrimary"
        tools:ignore="MissingPrefix"
        android:textSize="14dp"
        android:layout_gravity="center_horizontal"
        android:text="Or Login with Email"
        android:layout_marginTop="10dp"
        fontPath="fonts/fonts/OpenSans-Bold.ttf"
        android:layout_height="wrap_content" />






</LinearLayout>